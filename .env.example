# Broker API Credentials
# Copy this file to .env and fill in your actual credentials

# Alpaca Markets (Stocks & ETFs)
# Get credentials from: https://alpaca.markets/
# Use paper trading account for demo/trading
ALPACA_API_KEY=your_alpaca_api_key_here
ALPACA_API_SECRET=your_alpaca_api_secret_here

# Binance (Cryptocurrency)
# Get API keys from: https://www.binance.com/my/settings/api-management
BINANCE_API_KEY=your_binance_api_key_here
BINANCE_API_SECRET=your_binance_api_secret_here

# Risk Settings (optional overrides)
MAX_POSITION_SIZE=10000.0
MAX_DAILY_LOSS=1000.0
RISK_PER_TRADE=0.01
STOP_LOSS_PERCENT=0.02
TAKE_PROFIT_PERCENT=0.05
